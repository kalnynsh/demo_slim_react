{
    "name": "mdv/demo-auction",
    "description": "Demo auction - web application",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-json": "^8.1",
        "ext-mbstring": "^8.1",
        "doctrine/annotations": "^1.13",
        "doctrine/migrations": "^3.3",
        "doctrine/orm": "^2.10",
        "laminas/laminas-config-aggregator": "^1.7",
        "middlewares/negotiation": "^2.1",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.4",
        "ramsey/uuid": "^4.2",
        "sentry/sdk": "^3.2",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "symfony/cache": "^6.0",
        "symfony/config": "^6.0",
        "symfony/console": "^6.0",
        "symfony/mailer": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/validator": "^6.0",
        "twig/twig": "^3.3",
        "webmozart/assert": "1.10"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.3",
        "dms/phpunit-arraysubset-asserts": "^0.4.0",
        "doctrine/data-fixtures": "^1.5",
        "guzzlehttp/guzzle": "^7.4",
        "lctrs/psalm-psr-container-plugin": "^1.7",
        "overtrue/phplint": "^5.1",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.15"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf",
        "psalm": "psalm --config=psalm.xml",
        "test": "phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/test/coverage",
        "app": "php bin/app.php --ansi"
    }
}
